{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        // use "import" instead "import * as"
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
